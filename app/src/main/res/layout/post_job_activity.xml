<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:textAlignment="center"
    android:layout_gravity="center"
    android:textColor="@color/purple_700"
    android:background="#FBFBFB"
    android:orientation="vertical"
    android:textSize="20sp"
    tools:context=".Dashboards.HireFragments.PostJobActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Post Job"
        android:textColor="@color/purple_700"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/postName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="#ECEEE8"
        android:hint="Enter job title"
        android:textSize="18sp"
        android:padding="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/jobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="18sp"
            android:text="Post Job" />
        <RadioGroup
            android:id="@+id/user_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/hire_radio_btn_rc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Time"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <RadioButton
                android:id="@+id/get_job_radio_btn_rc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internship"
                android:textStyle="bold"
                android:textSize="18sp"
                />
        </RadioGroup>
    </LinearLayout>

<!--
    <EditText
        android:id="@+id/jobType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:background="#ECEEE8"
        android:textSize="18sp"
        android:hint="Full Time/ Internship"
        android:padding="10dp" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/Exptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="18sp"
            android:text="Experience" />
        <Spinner
        android:id="@+id/ExpSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="338dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:padding="20dp"
        android:spinnerMode="dropdown" />
    </LinearLayout>

    <EditText
        android:id="@+id/offerSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:background="#ECEEE8"
        android:textSize="18sp"
        android:hint="Offered Salary/CTC Offered"
        android:padding="10dp" />

    <EditText
        android:id="@+id/jobLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:background="#ECEEE8"
        android:textSize="18sp"
        android:hint="Location - Remote/ In Office"
        android:padding="10dp" />
    <!--
    <EditText
        android:id="@+id/jobSkills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:background="#ECEEE8"
        android:textSize="18sp"
        android:hint="Skill Requirements"
        android:padding="10dp" />-->

    <EditText
        android:id="@+id/jobDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:background="#ECEEE8"
        android:textSize="18sp"
        android:hint="Brief Description"
        android:padding="10dp" />

    <Button
        android:id="@+id/jobPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:gravity="center"
        android:text="POST" />
</FrameLayout>